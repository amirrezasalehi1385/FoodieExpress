<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import org.controlsfx.control.RangeSlider?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.SeeFoodItemsController">

    <!-- TOP: Header -->
    <top>
        <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0); -fx-background-radius: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🍽 Restaurant Information" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeBtn" onAction="#onCloseActionBtn"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <!-- Restaurant Information Section -->
                <VBox spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0.5, 0.0, 5.0); -fx-background-radius: 20;">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold;" text="Restaurant Details" />
                    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 15;">
                        <StackPane alignment="CENTER" prefHeight="100" prefWidth="100">
                            <Circle fill="#ecf0f1" radius="50" stroke="#bdc3c7" strokeWidth="2" />
                            <ImageView fx:id="profileImageView" fitHeight="90" fitWidth="90"
                                       preserveRatio="true" smooth="true" />
                        </StackPane>
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <Label fx:id="nameLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 22px; -fx-font-weight: bold;"
                                   text="Romano Italian Restaurant" />
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="📞" />
                                <Label fx:id="phoneLabel" style="-fx-text-fill: #34495e; -fx-font-size: 14px;"
                                       text="+1 (555) 123-4567" />
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="📍" />
                                <Label fx:id="addressLabel" style="-fx-text-fill: #34495e; -fx-font-size: 14px;"
                                       text="123 Main Street, Downtown, New York, NY 10001" wrapText="true" />
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Filter Section -->
                <VBox spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0.5, 0.0, 5.0); -fx-background-radius: 20;">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold;" text="🔍 Filter Food Items" />
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Search:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                        <TextField fx:id="searchField" promptText="Search food items..."
                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-size: 14px; -fx-prompt-text-fill: #6c757d;" />
                    </HBox>
                    <VBox spacing="8">
                        <Label text="Price Range:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label fx:id="minPriceLabel" text="0" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                            <RangeSlider fx:id="priceRangeSlider" min="0" max="50" lowValue="0" highValue="50"
                                         showTickLabels="true" showTickMarks="true" majorTickUnit="10" minorTickCount="5"
                                         style="-fx-pref-width: 400;" />
                            <Label fx:id="maxPriceLabel" text="50" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        </HBox>
                    </VBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Categories:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                        <ComboBox fx:id="categoryComboBox" promptText="Select categories..."
                                  style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 15; -fx-font-size: 14px;" />
                    </HBox>
                </VBox>

                <!-- Food Items Section -->
                <VBox spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0.5, 0.0, 5.0); -fx-background-radius: 20;">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold;" text="🍽 Food Items Collection" />
                    <GridPane fx:id="foodItemsGrid" hgap="15" vgap="15" visible="false" managed="false"
                              style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                        </columnConstraints>
                    </GridPane>
                    <Button fx:id="cartBtn" onAction="#onCartBtnAction"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 20; -fx-cursor: default;"
                            text="🛒 Cart" disable="true"/>
                    <Label fx:id="statusMessageLbl" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                </VBox>

                <Region prefHeight="20" />
            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <fx:include source="footer.fxml"/>
    </bottom>
</BorderPane>