<?xml version="1.0" encoding="UTF-8"?>
<!-- Required imports -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefWidth="900.0" prefHeight="1200.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.AdminOrdersController">

    <!-- External stylesheet -->
    <stylesheets>
        <URL value="@admin-orders.css" />
    </stylesheets>

    <!-- Top Section with Back Button and Filters -->
    <top>
        <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0); -fx-background-radius: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="📋 Admin Orders" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backBtn" onAction="#onBackBtnAction"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Header Section -->
            <VBox spacing="8" alignment="CENTER">
                <style>
                    -fx-background-color: rgba(255, 255, 255, 0.95);
                    -fx-background-radius: 12;
                    -fx-padding: 25;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.5, 0, 2);
                </style>
                <Label text="Admin Orders" styleClass="title-label">
                    <style>
                        -fx-font-size: 28px;
                        -fx-font-weight: bold;
                        -fx-text-fill: #2c3e50;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 2, 0, 0, 1);
                    </style>
                </Label>
                <Label text="View and manage all system orders with comprehensive details" styleClass="subtitle-label">
                    <style>
                        -fx-font-size: 15px;
                        -fx-text-fill: #6c757d;
                        -fx-font-style: italic;
                    </style>
                </Label>
            </VBox>

            <!-- Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <style>
                    -fx-background-color: rgba(255, 255, 255, 0.95);
                    -fx-background-radius: 12;
                    -fx-padding: 20;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.5, 0, 2);
                </style>
                <TextField fx:id="searchField" promptText="Search (item name)" styleClass="filter-field" />
                <TextField fx:id="vendorField" promptText="Vendor ID" styleClass="filter-field" />
                <TextField fx:id="courierField" promptText="Courier ID" styleClass="filter-field" />
                <TextField fx:id="customerField" promptText="Customer ID" styleClass="filter-field" />
                <TextField fx:id="statusField" promptText="Status" styleClass="filter-field" />
                <Button fx:id="filterButton" text="🔍 Filter" onAction="#onFilterButtonAction" styleClass="filter-button" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>

    <!-- Center Section - Orders -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;">
            <!-- Main ScrollPane that contains everything -->
            <ScrollPane fx:id="orderScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox alignment="CENTER" spacing="20"
                      style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0.5, 0.0, 5.0);">
                    <!-- Orders Section -->
                    <VBox fx:id="orderHistoryBox" alignment="CENTER" spacing="15"
                          style="-fx-padding: 10; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15;">
                        <Label text="Orders will appear here" styleClass="placeholder-text" />
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom Section -->
    <bottom>
        <fx:include source="footer.fxml" />
    </bottom>
</BorderPane>