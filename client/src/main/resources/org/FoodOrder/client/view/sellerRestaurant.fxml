<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #667eea;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.FoodOrder.client.controllers.SellerRestaurantController">
    <!-- Top Section: Header -->
    <top>
        <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0);">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🍔 FoodieExpress" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backBtn" onAction="#onBackBtnAction"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- Center Section: Restaurant List and Create Button -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;">
            <VBox alignment="CENTER" spacing="20"
                  style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0.5, 0.0, 5.0);">

                <!-- Title Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="🏪 My Restaurants"
                           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <font>
                            <Font name="System Bold" size="36.0" />
                        </font>
                    </Label>
                    <Label text="Manage your restaurants and create new ones"
                           style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d; -fx-text-alignment: center;">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Restaurant List -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                            style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;"
                            prefHeight="500.0">
                    <content>
                        <VBox fx:id="restaurantListBox" spacing="15" style="-fx-padding: 10;" />
                    </content>
                </ScrollPane>

                <!-- Create Restaurant Button -->
                <VBox alignment="CENTER" spacing="10">
                    <Button fx:id="createButton" onAction="#onCreateBtnAction"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 25; -fx-padding: 15 40; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 3.0);"
                            text="+ Create New Restaurant">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Button>
                    <Label text="Start your food business journey!"
                           style="-fx-font-size: 14px; -fx-text-fill: #95a5a6;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>

            </VBox>
        </VBox>
    </center>

    <!-- Bottom Section: Footer -->
    <bottom>
        <fx:include source="footer.fxml" />
    </bottom>
</BorderPane>