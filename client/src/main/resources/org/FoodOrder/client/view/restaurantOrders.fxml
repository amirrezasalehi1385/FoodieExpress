<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefWidth="900.0" prefHeight="1200.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.RestaurantOrdersController">

    <stylesheets>
        <URL value="@restaurant-orders.css" />
    </stylesheets>

    <top>
        <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0); -fx-background-radius: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="📋 My Restaurants' Orders" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backBtn" onAction="#onBackBtnAction"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;" />
        </ScrollPane>
    </center>

    <bottom>
        <fx:include source="footer.fxml" />
    </bottom>
</BorderPane>