<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.FoodOrder.client.controllers.FavoriteRestaurantsController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0);">
            <Button fx:id="backButton" text="← Back" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 12; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;" BorderPane.alignment="CENTER">
            <VBox fx:id="restaurantContainer" alignment="CENTER" spacing="20.0" minWidth="760.0" maxWidth="760.0" style="-fx-padding: 20;">
                <BorderPane.alignment>
                    <javafx.geometry.Pos fx:value="CENTER" />
                </BorderPane.alignment>
            </VBox>
            <style>
                .scroll-bar:vertical {
                -fx-background-color: transparent;
                -fx-pref-width: 12;
                }
                .scroll-bar:vertical .track {
                -fx-background-color: rgba(255, 255, 255, 0.2);
                -fx-border-color: transparent;
                -fx-background-radius: 8;
                }
                .scroll-bar:vertical .thumb {
                -fx-background-color: linear-gradient(to bottom, #3498db, #764ba2);
                -fx-background-radius: 8;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);
                }
                .scroll-bar:vertical .thumb:hover {
                -fx-background-color: linear-gradient(to bottom, #2980b9, #663399);
                }
                .scroll-bar:vertical .thumb:pressed {
                -fx-background-color: linear-gradient(to bottom, #1f618d, #512e7a);
                }
                .scroll-bar:vertical .increment-button, .scroll-bar:vertical .decrement-button {
                -fx-background-color: transparent;
                -fx-pref-height: 0;
                -fx-pref-width: 0;
                }
                .scroll-bar:vertical .increment-arrow, .scroll-bar:vertical .decrement-arrow {
                -fx-shape: "";
                -fx-padding: 0;
                }
            </style>
        </ScrollPane>
    </center>
    <bottom>
        <fx:include source="footer.fxml"/>
    </bottom>
</BorderPane>