<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="rootPane" prefWidth="900" prefHeight="600" style="-fx-background: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.FoodOrder.client.controllers.EditProfileController">

    <!-- TOP: Header with Action Buttons -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 18 25; -fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5); -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 20; -fx-border-width: 1; -fx-margin: 10;">
            <Button fx:id="cancelBtn" onAction="#onCancelAction" style="                 -fx-text-fill: white;                 -fx-background-color: rgba(231, 76, 60, 0.8);                 -fx-font-size: 15;                 -fx-font-weight: 600;                 -fx-background-radius: 12;                 -fx-padding: 10 18;                 -fx-cursor: hand;                 -fx-effect: dropshadow(gaussian, rgba(231, 76, 60, 0.4), 10, 0, 0, 3);             " text="✕ Cancel" />

            <Region HBox.hgrow="ALWAYS" />

            <Label alignment="CENTER" style="                 -fx-text-fill: white;                 -fx-font-size: 20;                 -fx-font-weight: bold;                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 0, 1);             " text="✎ Edit Profile" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="saveProfileBtn" onAction="#onSaveAction" style="                 -fx-text-fill: white;                 -fx-background-color: rgba(39, 174, 96, 0.8);                 -fx-font-size: 15;                 -fx-font-weight: 600;                 -fx-background-radius: 12;                 -fx-padding: 10 18;                 -fx-cursor: hand;                 -fx-effect: dropshadow(gaussian, rgba(39, 174, 96, 0.4), 10, 0, 0, 3);             " text="✓ Save" />
        </HBox>
    </top>

    <!-- CENTER: ScrollPane with Form Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 25; -fx-background: transparent;">

                <!-- Image Upload Section with Modern Cards -->
                <HBox alignment="CENTER" spacing="25" style="-fx-padding: 25; -fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8); -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 25; -fx-border-width: 1;">

                    <!-- Header Image Upload Card -->
                    <VBox alignment="CENTER" spacing="12">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: 600;" text="Cover Photo" />
                        <StackPane fx:id="selectImagePane" onMouseClicked="#onSelectImageClick" prefHeight="140" prefWidth="220" style="                     -fx-background-color: rgba(255, 255, 255, 0.2);                     -fx-background-radius: 15;                     -fx-cursor: hand;                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);                     -fx-border-color: rgba(255,255,255,0.3);                     -fx-border-width: 2;                     -fx-border-radius: 15;                     -fx-border-style: dashed;                 ">
                            <VBox alignment="CENTER" spacing="8">
                                <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 40;" text="📷" />
                                <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12; -fx-font-weight: 600;" text="Click to upload cover" />
                            </VBox>
                        </StackPane>
                    </VBox>

                    <!-- Profile Picture Upload Card -->
                    <VBox alignment="CENTER" spacing="12">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: 600;" text="Profile Photo" />
                        <StackPane alignment="CENTER" prefHeight="120" prefWidth="120" style="-fx-cursor: hand;">
                            <!-- Background Circle with Gradient -->
                            <Circle fill="linear-gradient(to bottom right, #ff6b6b, #ee5a24)" radius="60" stroke="rgba(255,255,255,0.8)" strokeWidth="3" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);" />
                            <Circle fill="rgba(255,255,255,0.2)" radius="55" />

                            <!-- Profile Image or Placeholder -->
                            <ImageView fx:id="profileImageView" fitHeight="110" fitWidth="110" preserveRatio="true" smooth="true" style="-fx-clip: circle(55px at center);" />

                            <!-- Upload Icon Overlay -->
                            <VBox alignment="CENTER" spacing="3">
                                <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 24;" text="📸" />
                                <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 10; -fx-font-weight: 600;" text="CHANGE" />
                            </VBox>
                        </StackPane>
                    </VBox>
                </HBox>

                <!-- Personal Information Form with Modern Design -->
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8);">

                    <!-- Section Header -->
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label style="-fx-font-size: 20;" text="👤" />
                        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18; -fx-font-weight: bold;" text="Personal Information" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Circle fill="linear-gradient(to right, #667eea, #764ba2)" radius="3" />
                    </HBox>

                    <!-- Modern Form Grid -->
                    <GridPane hgap="20" style="-fx-padding: 10 0;" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <!-- Full Name Input -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#3498db" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Full Name" />
                            </HBox>
                            <TextField fx:id="fullNameInput" promptText="Enter your full name" style="                         -fx-background-radius: 12;                         -fx-background-color: #f8f9fa;                         -fx-text-fill: #2c3e50;                         -fx-prompt-text-fill: #bdc3c7;                         -fx-padding: 15;                         -fx-font-size: 14;                         -fx-border-color: transparent;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                     " />
                        </VBox>

                        <!-- Phone Number Input -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#e74c3c" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Phone Number" />
                            </HBox>
                            <TextField fx:id="phoneInput" promptText="Enter phone number" style="                         -fx-background-radius: 12;                         -fx-background-color: #f8f9fa;                         -fx-text-fill: #2c3e50;                         -fx-prompt-text-fill: #bdc3c7;                         -fx-padding: 15;                         -fx-font-size: 14;                         -fx-border-color: transparent;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                     " />
                        </VBox>

                        <!-- Address Input (Full Width) -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#f39c12" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Address" />
                            </HBox>
                            <TextArea fx:id="addressInput" prefHeight="80" promptText="Enter your complete address" style="                         -fx-background-radius: 12;                         -fx-background-color: #f8f9fa;                         -fx-text-fill: #2c3e50;                         -fx-prompt-text-fill: #bdc3c7;                         -fx-padding: 15;                         -fx-font-size: 14;                         -fx-border-color: transparent;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                     " />
                        </VBox>

                        <!-- Email Input -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#9b59b6" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Email Address" />
                            </HBox>
                            <TextField fx:id="emailInput" promptText="Enter your email address" style="                         -fx-background-radius: 12;                         -fx-background-color: #f8f9fa;                         -fx-text-fill: #2c3e50;                         -fx-prompt-text-fill: #bdc3c7;                         -fx-padding: 15;                         -fx-font-size: 14;                         -fx-border-color: transparent;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                     " />
                        </VBox>

                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Bank Information Form with Enhanced Security Design -->
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8);">

                    <!-- Section Header with Security Badge -->
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label style="-fx-font-size: 20;" text="🏦" />
                        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18; -fx-font-weight: bold;" text="Bank Information" />
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Bank Information Grid -->
                    <GridPane hgap="20" style="-fx-padding: 10 0;" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <!-- Bank Name Input -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#27ae60" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Bank Name" />
                            </HBox>
                            <TextField fx:id="bankNameInput" promptText="Select or enter bank name" style="                         -fx-background-radius: 12;                         -fx-background-color: #f8f9fa;                         -fx-text-fill: #2c3e50;                         -fx-prompt-text-fill: #bdc3c7;                         -fx-padding: 15;                         -fx-font-size: 14;                         -fx-border-color: transparent;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                     " />
                        </VBox>

                        <!-- Account Number Input with Security Features -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Circle fill="#e67e22" radius="3" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: 600; -fx-text-transform: uppercase;" text="Account Number" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <TextField fx:id="accountNumberInput" promptText="Enter account number" style="                             -fx-background-radius: 12;                             -fx-background-color: #f8f9fa;                             -fx-text-fill: #2c3e50;                             -fx-prompt-text-fill: #bdc3c7;                             -fx-padding: 15;                             -fx-font-size: 14;                             -fx-border-color: transparent;                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);                         " HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>

                        <rowConstraints>
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Footer Spacing for Content -->
                <Region prefHeight="30" />

            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM: Ready for future additions -->
    <bottom>
        <fx:include source="footer.fxml"/>
    </bottom>

</BorderPane>