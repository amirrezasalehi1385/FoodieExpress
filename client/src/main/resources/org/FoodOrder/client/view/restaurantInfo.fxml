<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="rootPane" prefWidth="900" prefHeight="700"
            style="-fx-background: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.RestaurantInfoController">

    <!-- TOP: Header -->
    <top>
        <VBox style="-fx-padding: 20; -fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5); -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 20; -fx-border-width: 1; -fx-margin: 10;">
            <!-- Header with Close Button -->
            <HBox alignment="CENTER" spacing="10">
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER" spacing="8">
                    <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 0, 1);"
                           text="🍽️ Restaurant Information" />
                    <Label alignment="CENTER" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14;"
                           text="Manage restaurant information and menu" />
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Beautiful Close Button -->
                <StackPane>
                    <!-- Main close button -->
                    <Button fx:id="closeBtn" onAction="#onCloseActionBtn"
                            style="-fx-text-fill: white; -fx-background-radius: 50; -fx-border-color: rgb(255,255,255); -fx-border-radius: 50; -fx-border-width: 1.5; -fx-padding: 0; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;"
                            text="✕" prefWidth="40" prefHeight="40"/>
                </StackPane>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 25; -fx-background: transparent;">

                <!-- Restaurant Information Section -->
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8);">
                    <!-- Section Header -->
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label style="-fx-font-size: 20;" text="🍽" />
                        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18; -fx-font-weight: bold;" text="Restaurant Details" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Circle fill="linear-gradient(to right, #667eea, #764ba2)" radius="3" />
                    </HBox>

                    <!-- Restaurant Info Layout -->
                    <HBox spacing="25" alignment="CENTER_LEFT" style="-fx-padding: 15;">
                        <!-- Restaurant Image -->
                        <StackPane alignment="CENTER" prefHeight="120" prefWidth="120">
                            <!-- Background Circle with Gradient -->
                            <Circle fill="linear-gradient(to bottom right, #ff6b6b, #ee5a24)" radius="60"
                                    stroke="rgba(255,255,255,0.8)" strokeWidth="3"
                                    style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);" />
                            <Circle fill="rgba(255,255,255,0.2)" radius="55" />

                            <!-- Restaurant Image or Placeholder -->
                            <ImageView fx:id="profileImageView" fitHeight="110" fitWidth="110"
                                       preserveRatio="true" smooth="true" style="-fx-clip: circle(55px at center);" />

                        </StackPane>

                        <!-- Restaurant Details -->
                        <VBox spacing="12" HBox.hgrow="ALWAYS">
                            <Label fx:id="nameLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;"
                                   text="Romano Italian Restaurant" />

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label style="-fx-text-fill: #667eea; -fx-font-size: 16;" text="📞" />
                                <Label fx:id="phoneLabel" style="-fx-text-fill: #34495e; -fx-font-size: 16;"
                                       text="+1 (555) 123-4567" />
                            </HBox>

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label style="-fx-text-fill: #667eea; -fx-font-size: 16;" text="📍" />
                                <Label fx:id="addressLabel" style="-fx-text-fill: #34495e; -fx-font-size: 16;"
                                       text="123 Main Street, Downtown, New York, NY 10001" wrapText="true" />
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Food Items Section -->
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8);">
                    <!-- Section Header -->
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label style="-fx-font-size: 20;" text="🍽" />
                        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18; -fx-font-weight: bold;" text="Food Items Collection" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Circle fill="linear-gradient(to right, #667eea, #764ba2)" radius="3" />
                    </HBox>

                    <!-- Add Food Item Button -->
                    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addFoodBtn"
                                text="➕ Add New Food Item"
                                onAction="#addFoodItemActionBtn"
                                style="-fx-background-color: linear-gradient(135deg, #1abc9c, #16a085); -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: 600; -fx-background-radius: 25; -fx-padding: 12 24; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26, 188, 156, 0.3), 10, 0, 0, 3);"/>
                    </HBox>

                    <!-- Food Items Grid (2 Columns) -->
                    <GridPane fx:id="foodItemsGrid"
                              hgap="20"
                              vgap="20"
                              visible="false"
                              managed="false"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 15; -fx-padding: 20;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Show Menu Section -->
                <VBox spacing="15" alignment="CENTER"
                      style="-fx-padding: 25; -fx-background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.3), 10, 0, 0, 5);">
                    <Label style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="📋 Menu Management" />
                    <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14;" text="View and manage complete restaurant menu" />
                    <Button style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-padding: 15 30; -fx-background-radius: 25; -fx-font-size: 16; -fx-font-weight: 600; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                            text="Show Complete Menu" />
                </VBox>

                <Region prefHeight="30" />
            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <fx:include source="footer.fxml"/>
    </bottom>

</BorderPane>