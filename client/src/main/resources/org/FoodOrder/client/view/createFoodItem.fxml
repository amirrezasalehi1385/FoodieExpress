<?xml version="1.0" encoding="UTF-8"?>

<!-- Required imports -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="rootPane" prefWidth="900.0" prefHeight="1200.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.FoodFormController">

    <!-- External stylesheet -->
    <stylesheets>
        <URL value="@food-form.css" />
    </stylesheets>

    <!-- Top section: Header -->
    <top>
        <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0); -fx-background-radius: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🍽 Create New Food Item" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backBtn" onAction="#onCancelBtnAction"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>
            <Label fx:id="statusMessageLbl" visible="false" styleClass="status-message" />
        </VBox>
    </top>

    <!-- Center section: Form content -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;">
            <!-- Main ScrollPane that contains everything -->
            <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">

                <VBox alignment="CENTER" spacing="20"
                      style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0.5, 0.0, 5.0);">

                    <!-- Image Upload Section -->
                    <VBox spacing="20" alignment="CENTER">
                        <Label text="📷 Product Image"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;" />

                        <StackPane prefWidth="300" prefHeight="300"
                                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 15; -fx-border-color: #dee2e6; -fx-border-radius: 15; -fx-border-width: 2; -fx-border-style: dashed;">

                            <!-- Default placeholder when no image -->
                            <VBox fx:id="imagePlaceholder" spacing="8" alignment="CENTER">
                                <Label text="📸" style="-fx-font-size: 48; -fx-text-fill: #adb5bd;"/>
                                <Label text="No image selected" style="-fx-font-size: 14; -fx-text-fill: #6c757d;"/>
                            </VBox>

                            <!-- Image preview (initially hidden) -->
                            <ImageView fx:id="profileImageView" fitWidth="290" fitHeight="290" preserveRatio="true"
                                       visible="false"/>
                        </StackPane>

                        <!-- Upload buttons -->
                        <HBox spacing="20" alignment="CENTER">
                            <Button onAction="#onUploadImageBtnAction" fx:id="uploadImageBtn" text="📁 Choose Image"
                                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"/>
                            <Button fx:id="removeImageBtn" text="🗑️ Remove" visible="false"
                                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"/>
                        </HBox>
                    </VBox>

                    <!-- Form Fields -->
                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <!-- Name Field -->
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="8">
                            <Label text="Name:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                        </VBox>
                        <TextField fx:id="nameInput" promptText="Enter delicious food name"
                                   style="-fx-pref-width: 400px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 12px 15px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Description Field -->
                        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="8">
                            <Label text="Description:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                        </VBox>
                        <TextArea fx:id="descriptionInput" promptText="Describe this amazing food item..."
                                  prefRowCount="4" wrapText="true"
                                  style="-fx-pref-width: 400px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 12px 15px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Price Field -->
                        <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="8">
                            <Label text="Price:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                        </VBox>
                        <TextField fx:id="priceInput" promptText="Enter price (e.g., 1299)"
                                   style="-fx-pref-width: 400px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 12px 15px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <!-- Supply Field -->
                        <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="8">
                            <Label text="Supply:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                        </VBox>
                        <TextField fx:id="supplyInput" promptText="Available quantity"
                                   style="-fx-pref-width: 400px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 12px 15px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Categories Field -->
                        <VBox GridPane.rowIndex="4" GridPane.columnIndex="0" spacing="8">
                            <Label text="Categories:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                        </VBox>
                        <VBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="10">
                            <HBox spacing="15">
                                <ListView fx:id="categoriesListView"
                                          prefHeight="150"
                                          style="-fx-pref-width: 300px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"/>
                                <Button fx:id="addCategoryBtn"
                                        text="➕"
                                        style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 12 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"/>
                            </HBox>
                            <FlowPane fx:id="badgeContainer"
                                      hgap="10" vgap="10"
                                      prefWrapLength="400"
                                      style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 10;"/>
                        </VBox>
                    </GridPane>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom section: Action Buttons -->
    <bottom>
        <VBox style="-fx-padding: 25;" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="cancelBtn" onAction="#onCancelBtnAction" text="❌ Cancel"
                        prefWidth="150"
                        style="-fx-background-color: rgba(231,76,60,0.9); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 25; -fx-padding: 15 30; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
                <Button onAction="#onCreateAction" fx:id="createBtn" text="✨ Create Item"
                        prefWidth="180"
                        style="-fx-background-color: rgba(52,152,219,0.9); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 25; -fx-padding: 15 30; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>