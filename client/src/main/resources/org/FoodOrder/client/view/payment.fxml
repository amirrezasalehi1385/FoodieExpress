<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefWidth="600.0" prefHeight="400.0" styleClass="root-pane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.FoodOrder.client.controllers.PaymentController">
    <stylesheets>
        <URL value="@payment.css" />
    </stylesheets>
    <top>
        <VBox styleClass="header-box">
            <Label styleClass="header-label" text="Payment ðŸ’³" />
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <VBox spacing="10" styleClass="payment-form">
                <HBox spacing="10">
                    <Label text="Card Number:" styleClass="info-label" />
                    <TextField fx:id="cardNumberField" styleClass="text-field" promptText="1234-5678-9012-3456" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Expiry Date:" styleClass="info-label" />
                    <TextField fx:id="expiryDateField" styleClass="text-field" promptText="MM/YY" />
                </HBox>
                <HBox spacing="10">
                    <Label text="CVV:" styleClass="info-label" />
                    <TextField fx:id="cvvField" styleClass="text-field" promptText="123" />
                </HBox>
                <Button fx:id="payButton" text="Pay Now" onAction="#onPayAction" styleClass="pay-button" />
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Button fx:id="backButton" text="Back" onAction="#onBackAction" styleClass="back-button" />
        </HBox>
    </bottom>
</BorderPane>