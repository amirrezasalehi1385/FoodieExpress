<?xml version="1.0" encoding="UTF-8"?>

<!-- Required imports -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefWidth="900.0" prefHeight="1200.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FoodOrder.client.controllers.CartController">

    <!-- External stylesheet -->
    <stylesheets>
        <URL value="@cart.css" />
    </stylesheets>

    <top>
        <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0.0, 2.0); -fx-background-radius: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🛒 Your Cart" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backBtn" onAction="#onBackBtnAction"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0.0, 2.0);"
                        text="← Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </HBox>
            <Label fx:id="statusMessageLbl" visible="false" styleClass="status-message" />
        </VBox>
    </top>

    <!-- Center section: Cart items and checkout box -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40;">
            <!-- Main ScrollPane that contains everything -->
            <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">

                <VBox alignment="CENTER" spacing="20"
                      style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0.5, 0.0, 5.0);">

                    <!-- Cart Items Section -->
                    <VBox fx:id="cartItemsBox" alignment="CENTER" spacing="15"
                          style="-fx-padding: 10; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15;">
                        <Label text="Your cart items will appear here" styleClass="placeholder-text" />
                    </VBox>

                    <!-- Checkout section -->
                    <VBox spacing="20" alignment="CENTER"
                          style="-fx-background-color: rgba(248, 249, 250, 0.95); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.5, 0, 2);">

                        <!-- Checkout header -->
                        <Label text="💳 Checkout Details"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;" />

                        <!-- Address input -->
                        <VBox spacing="8" alignment="CENTER">
                            <Label text="📍 Delivery Address:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                            <TextField fx:id="deliveryAddressField"
                                       promptText="Enter your delivery address..."
                                       style="-fx-pref-width: 400px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 12px 15px; -fx-effect: inset dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);" />
                        </VBox>

                        <!-- Payment method selection -->
                        <VBox spacing="12" alignment="CENTER">
                            <Label text="💰 Payment Method:"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
                            <VBox spacing="8" alignment="CENTER"
                                  style="-fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 10px; -fx-border-color: #dee2e6; -fx-border-width: 1px; -fx-border-radius: 10px;">
                                <RadioButton fx:id="walletPaymentRadio" text="💳 Pay from Wallet"
                                             style="-fx-font-size: 15px; -fx-text-fill: #495057; -fx-font-weight: 500; -fx-padding: 8px 12px;"
                                             selected="true">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="paymentMethodGroup" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="onlinePaymentRadio" text="🌐 Online Payment"
                                             style="-fx-font-size: 15px; -fx-text-fill: #495057; -fx-font-weight: 500; -fx-padding: 8px 12px;"
                                             toggleGroup="$paymentMethodGroup" />
                            </VBox>
                        </VBox>

                        <!-- Total price and submit button -->
                        <HBox spacing="25" alignment="CENTER"
                              style="-fx-padding: 20px 0 0 0; -fx-border-color: #e9ecef; -fx-border-width: 2 0 0 0;">
                            <VBox alignment="CENTER">
                                <Label text="Total Amount:"
                                       style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: 500;" />
                                <Label fx:id="totalPriceLabel" text="0.00"
                                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 3, 0.5, 0, 1);" />
                            </VBox>
                            <Button fx:id="submitOrderButton"
                                    text="🚀 Submit Order"
                                    onAction="#onSubmitOrderAction"
                                    style="-fx-background-color: linear-gradient(to bottom, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15px 30px; -fx-background-radius: 25px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(46,204,113,0.4), 8, 0.5, 0, 2); -fx-min-width: 150px;" />
                        </HBox>

                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom section: footer -->
    <bottom>
        <fx:include source="footer.fxml" />
    </bottom>
</BorderPane>